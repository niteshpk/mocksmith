{
  "info": {
    "name": "MockSmith API",
    "_postman_id": "a9b4b1d1-2b6b-4a84-9b67-8f2fb1c2a9e0",
    "description": "Collection with explicit URL parts so the address bar always shows correctly. Covers health, docs, metrics, and CRUD for users, posts, comments, todos with pagination & filters.",
    "schema": "https://schema.getpostman.com/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "scheme", "value": "http" },
    { "key": "host", "value": "localhost" },
    { "key": "port", "value": "3000" },
    { "key": "page", "value": "1" },
    { "key": "limit", "value": "10" },
    { "key": "userId", "value": "1" },
    { "key": "postId", "value": "1" },
    { "key": "commentId", "value": "1" },
    { "key": "todoId", "value": "1" }
  ],
  "item": [
    {
      "name": "Health & Meta",
      "item": [
        {
          "name": "GET /health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/health",
              "protocol": "{{scheme}}",
              "host": ["{{host}}"],
              "port": "{{port}}",
              "path": ["health"]
            }
          }
        },
        {
          "name": "GET /api/health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/api/health",
              "protocol": "{{scheme}}",
              "host": ["{{host}}"],
              "port": "{{port}}",
              "path": ["api", "health"]
            }
          }
        },
        {
          "name": "GET /docs.json",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/docs.json",
              "protocol": "{{scheme}}",
              "host": ["{{host}}"],
              "port": "{{port}}",
              "path": ["docs.json"]
            }
          }
        },
        {
          "name": "GET /metrics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/metrics",
              "protocol": "{{scheme}}",
              "host": ["{{host}}"],
              "port": "{{port}}",
              "path": ["metrics"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/api/users?_page={{page}}&_limit={{limit}}",
              "protocol": "{{scheme}}",
              "host": ["{{host}}"],
              "port": "{{port}}",
              "path": ["api", "users"],
              "query": [
                { "key": "_page", "value": "{{page}}" },
                { "key": "_limit", "value": "{{limit}}" }
              ]
            }
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New User\",\n  \"username\": \"newuser\",\n  \"email\": \"newuser@example.com\"\n}"
            },
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/api/users",
              "protocol": "{{scheme}}",
              "host": ["{{host}}"],
              "port": "{{port}}",
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/api/users/{{userId}}",
              "protocol": "{{scheme}}",
              "host": ["{{host}}"],
              "port": "{{port}}",
              "path": ["api", "users", "{{userId}}"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{ \"name\": \"Updated User\" }" },
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/api/users/{{userId}}",
              "protocol": "{{scheme}}",
              "host": ["{{host}}"],
              "port": "{{port}}",
              "path": ["api", "users", "{{userId}}"]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/api/users/{{userId}}",
              "protocol": "{{scheme}}",
              "host": ["{{host}}"],
              "port": "{{port}}",
              "path": ["api", "users", "{{userId}}"]
            }
          }
        }
      ]
    },
